{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src/Bliss",
          "files": ["**/*.csproj"]
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net10.0",
        "LangVersion": "preview"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Bliss",
      "_appTitle": "Bliss",
      "_enableSearch": true,
      "pdf": true
    }
  }
}